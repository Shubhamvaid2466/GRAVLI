        // --- Helper function to generate generic menu items ---
        function generateMenuItems(cafeId, count = 15) {
            const items = [];
            for (let i = 1; i <= count; i++) {
                items.push({
                    id: `${cafeId.toLowerCase()}-${i}`,
                    name: `Item ${i}`,
                    price: 100 + (i * 5)
                });
            }
            return items;
        }

